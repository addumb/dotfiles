export AWS_DEFAULT_REGION=us-west-1
export AWS_DEFAULT_OUTPUT=table
export AWS_CONFIG_FILE=~/.awscfg
export EC2_HOME=/usr/lib/ec2-api-tools/
export AWS_CREDENTIAL_FILE=/home/adam/.awscreds
export AWS_AUTO_SCALING_HOME=/usr/lib/ec2-asg-api-tools/
export AWS_ELB_HOME=/usr/lib/elb-api-tools/
export PATH="$PATH:$EC2_HOME/bin:$AWS_AUTO_SCALING_HOME/bin:$AWS_ELB_HOME/bin"

export AWS_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXX
export AWS_SECRET_KEY=XXXXXXXXXXXXXXXXXXXXXXXXX
export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY
export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_KEY
export EC2_ACCESS_KEY_ID=$AWS_ACCESS_KEY
export EC2_SECRET_ACCESS_KEY=$AWS_SECRET_KEY
export AMAZON_ACCESS_KEY_ID=$AWS_ACCESS_KEY
export AMAZON_SECRET_ACCESS_KEY=$AWS_SECRET_KEY
cat > ~/.awscreds <<__EOF__
AWSAccessKeyId=$AWS_ACCESS_KEY
AWSSecretKey=$AWS_SECRET_KEY
__EOF__
